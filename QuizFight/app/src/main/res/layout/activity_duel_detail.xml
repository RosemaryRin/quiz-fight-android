<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout_dueldetail_activitycontainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="rogueone.quizfight.DuelDetailActivity">

    <LinearLayout
        android:id="@+id/linearlayout_dueldetail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/textview_dueldetail_you"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dueldetail_you"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_dueldetail_globalscore"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textview_dueldetail_opponent"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandablelistview_dueldetail_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
