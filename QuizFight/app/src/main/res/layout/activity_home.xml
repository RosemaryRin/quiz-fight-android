<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="rogueone.quizfight.HomeActivity">

    <LinearLayout
        android:id="@+id/UsernameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <TextView
            android:id="@+id/UsernameView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/ic_launcher"
            android:gravity="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/StartDuel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/caret_right"
            android:drawableLeft="@drawable/duel"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/caret_right"
            android:drawableStart="@drawable/duel"
            android:text="@string/start_duel"
            android:textAlignment="textStart"
            android:visibility="gone" />

        <TextView
            android:id="@+id/LastDuelsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="@string/last_duels"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/NoDuels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_duels"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/LastDuels"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/LastDuel0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LastDuel0Icon"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:contentDescription="@string/victory_defeat_icon" />

                <TextView
                    android:id="@+id/LastDuel0User"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/LastDuel0Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LastDuel1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LastDuel1Icon"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:contentDescription="@string/victory_defeat_icon" />

                <TextView
                    android:id="@+id/LastDuel1User"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/LastDuel1Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LastDuel2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LastDuel2Icon"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:contentDescription="@string/victory_defeat_icon" />

                <TextView
                    android:id="@+id/LastDuel2User"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/LastDuel2Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LastDuel3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LastDuel3Icon"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:contentDescription="@string/victory_defeat_icon" />

                <TextView
                    android:id="@+id/LastDuel3User"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/LastDuel3Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LastDuel4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LastDuel4Icon"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:contentDescription="@string/victory_defeat_icon" />

                <TextView
                    android:id="@+id/LastDuel4User"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/LastDuel4Score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/DuelsHistory"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/history"
            android:textAlignment="center"
            android:visibility="gone" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/StartDuelFAB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:scaleType="center"
        android:visibility="visible"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/duel"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
