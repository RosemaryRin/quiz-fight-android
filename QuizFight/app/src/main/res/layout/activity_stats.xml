<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/duels_stats"
            android:textSize="@dimen/stats_label_height"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/duels_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/questions_stats"
            android:textSize="@dimen/stats_label_height"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/questions_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rounds_stats"
            android:textSize="@dimen/stats_label_height"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/round_chart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/chart_height" />
    </LinearLayout>
</ScrollView>